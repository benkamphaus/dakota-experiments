# A Dakota uncertainty quantification (UQ) experiment with HydroTrend.
#
# Call with:
#   $ dakota -i dakota.in -o dakota.out &> run.log
#
# Mark Piper (mark.piper@colorado.edu)

environment
  tabular_graphics_data
    tabular_graphics_file = 'dakota.dat'

method
  sampling
    sample_type lhs
    seed = 17
    samples = 24
    response_levels = 
        50  60  70  80  90 100
       100 120 140 160 180 200
    distribution cumulative

# T = Mean annual temperature (deg C)
# P = Mean annual preciptiation (m)
# Ranges are approx 10% of default values set in WMT
variables
  uniform_uncertain = 2
    descriptors     'T'   'P'
    lower_bounds   12.8   1.4
    upper_bounds   15.8   1.8

interface
  fork
  asynchronous
  evaluation_concurrency = 2
  analysis_driver = 'run_hydrotrend.py'
  parameters_file = 'params.in'
  results_file    = 'results.out'
  work_directory directory_tag
  named 'step' file_save  directory_save 
  aprepro

responses
  response_functions = 2
  response_descriptors = 'Q_mean' 'Q_stdev'
  no_gradients
  no_hessians
